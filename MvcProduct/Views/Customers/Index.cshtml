@model MvcProduct.Models.CustomerViewModel
@{
    ViewData["Title"] = "Клиенты";
}

<h1>Клиенты</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Добавить нового клиента</a>
</p>

<form asp-controller="Customers" asp-action="Index" method="get">
    <p>
        <select asp-for="SearchCity" asp-items="Model.Cities">
            <option value="">Все города</option>
        </select>
        <label>Имя: <input type="text" asp-for="SearchFirstName" /></label>
        <label>Фамилия: <input type="text" asp-for="SearchLastName" /></label>
        <input type="submit" value="Поиск" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers![0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers![0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers![0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers![0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers![0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>