@model MvcProduct.Models.Order

@{
    ViewData["Title"] = "Детали заказа";
    var product = Model.Products.First(); 
}

<h1>Детали заказа</h1>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата заказа
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
        </dd>
        
        <dt class="col-sm-2">
            Клиент
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.FirstName @Model.Customer.LastName
        </dd>
        
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        
        <dt class="col-sm-2">
            Товар
        </dt>
        <dd class="col-sm-10">
            @product.Name
        </dd>
        
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @product.Category
        </dd>
        
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @product.Price.ToString("C")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Изменить</a>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>